---
import { marked } from "marked"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Hero from '../components/home/Hero.astro'
import About from "../components/home/About.astro"

import {featureHighlight, greetingTitle, greetingSubtitle, aboutTitle, aboutText} from "../content/fixed-pages/home.json"
import FeatureHighlight from "../components/home/FeatureHighlight.astro"

const aboutTextContent = marked(aboutText)
---

<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <script>import "preline/dist/preline.js";</script>
</head>
<body>
	<Header href="/"></Header>
    <main id="content" class="">
        <div class="w-full h-[56px]">
                
        </div>

        <Hero greetingTitle={greetingTitle} greetingSubtitle={greetingSubtitle}></Hero>

        <FeatureHighlight features={featureHighlight}></FeatureHighlight>

        <About aboutTitle={aboutTitle} aboutTextContent={aboutTextContent}></About>
        
        <section class="w-full py-10 bg-gray-50 min-h-[50vh]">
            <div class="px-5 md:px-0 md:w-2/3 h-full mx-auto">
                <h2 class="w-full md:text-center text-green-700 text-3xl md:text-4xl font-semibold playfair-display">
                    Ezeket csak nálunk találod
                </h2>
                <div class="flex flex-col gap-y-5">
                    <div class="grid grid-cols-1 md:grid-cols-2">
                        <div class="order-1 flex flex-col gap-y-2 justify-center">
                            <h3 class="text-2xl md:text-3xl text-stone-600">
                                Bekészítés
                            </h3>
                            <div class="w-full md:w-3/4 text-xl font-light text-gray-800 flex flex-col gap-y-5">
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam facilisis libero eu orci dictum eleifend sed eget quam
                                </p>
                            </div>
                        </div>
                        <div class="order-0 md:order-2 h-[50vh] flex flex-col items-center justify-center">
                            <div class="w-5/6 h-5/6 rounded-lg border border-gray-300">
                                <img src="/manuel.jpg" alt="Bekészítés" class="w-full h-full rounded-lg shadow-lg object-cover">
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2">
                        <div class="order-2 flex flex-col gap-y-2 justify-center">
                            <h3 class="text-2xl md:text-3xl text-stone-600">
                                Környezetbarát megoldások
                            </h3>
                            <div class="w-full md:w-3/4 text-xl font-light text-gray-800 flex flex-col gap-y-5">
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam facilisis libero eu orci dictum eleifend sed eget quam
                                </p>
                            </div>
                        </div>
                        <div class="h-[50vh] flex flex-col items-center justify-center">
                            <div class="w-5/6 h-5/6 rounded-lg border border-gray-300">
                                <img src="/manuel.jpg" alt="Bekészítés" class="w-full h-full rounded-lg shadow-lg object-cover">
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2">
                        <div class="order-1 flex flex-col gap-y-2 justify-center">
                            <h3 class="text-2xl md:text-3xl text-stone-600">
                                Élmények
                            </h3>
                            <div class="w-full md:w-3/4 text-xl font-light text-gray-800 flex flex-col gap-y-5">
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam facilisis libero eu orci dictum eleifend sed eget quam
                                </p>
                            </div>
                        </div>
                        <div class="order-0 md:order-2 h-[50vh] flex flex-col items-center justify-center">
                            <div class="w-5/6 h-5/6 rounded-lg border border-gray-300">
                                <img src="/manuel.jpg" alt="Bekészítés" class="w-full h-full rounded-lg shadow-lg object-cover">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        
        <section class="w-full py-10 bg-gray-50 min-h-[50vh]">
            <div class="px-5 md:px-0 md:w-2/3 h-full mx-auto grid grid-cols-1 md:grid-cols-2 gap-y-2">
                <div class="flex flex-col justify-center">
                    <h2 class="text-green-700 text-3xl md:text-4xl font-semibold playfair-display">
                        <span class="block">
                            Csak megérkezned kell,
                        </span>
                        <span class="block">
                            minden másról
                        </span>
                        <span class="block">
                            mi gondoskodunk.
                        </span>
                    </h2>
                </div>
                <div class="grid grid-cols-2 gap-x-5 gap-y-5">
                    <div class="bg-white border border-gray-200 shadow-sm rounded-lg">
                        <div class="p-4 h-full w-full flex flex-col gap-y-2 items-center justify-center">
                            <div class="text-green-700">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.7" stroke-linecap="round" stroke-linejoin="round"
