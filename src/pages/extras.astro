---
import NormalPageLayout from "../layouts/NormalPageLayout.astro";
import Assets from "../util/assets";
import Image from "astro/components/Image.astro";

import directBooking from '../content/fixed-pages/direct-booking.json';
import guide from '../content/fixed-pages/guide.json';
import sights from '../content/fixed-pages/sights.json';

const loadedDirectBookingCover = Assets.getImage(directBooking.coverImage);
const loadedGuideCover = Assets.getImage(guide.coverImage);
const loadedSightsCover = Assets.getImage(sights.coverImage);
---
<NormalPageLayout title="Extras" href="/extras">
    <span slot="title" class="block">
        Ajándék
    </span>
    <span slot="description">Here are some extra things you might like to know about me.</span>
    <Fragment slot="content">
        <section class="w-full py-5 md:py-10 bg-gray-50">
            <div class="px-5 md:px-0 md:w-2/3 mx-auto grid gap-6 grid-cols-1 md:grid-cols-3">
                <div>
                    <div class="flex flex-col gap-y-5">
                        <div class="flex justify-center">
                            <Image src={loadedDirectBookingCover} alt="" class="w-full h-auto rounded-lg">
                        </div>
                        <div class="flex flex-col gap-y-2">
                            <h2 class="text-2xl">
                                Közvetlen foglalási ajánlat
                            </h2>
                            <p>
                                {directBooking.subtitle}    
                            </p>
                            <div>
                                <a href="/extras/direct-booking" class="underline">
                                    További információ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="flex flex-col gap-y-5">
                        <div class="flex justify-center">
                            <Image src={loadedSightsCover} alt="" class="w-full h-auto rounded-lg">
                        </div>
                        <div class="flex flex-col gap-y-2">
                            <h2 class="text-2xl">
                                Látnivalók
                            </h2>
                            <p>
                                {sights.subtitle}    
                            </p>
                            <div>
                                <a href="/extras/sights" class="underline">
                                    További információ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="flex flex-col gap-y-5">
                        <div class="flex justify-center">
                            <Image src={loadedGuideCover} alt="" class="w-full h-auto rounded-lg">
                        </div>
                        <div class="flex flex-col gap-y-2">
                            <h2 class="text-2xl">
                                Programajánlat
                            </h2>
                            <p>
                                {guide.subtitle}    
                            </p>
                            <div>
                                <a href="/extras/guide" class="underline">
                                    További információ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </Fragment>
</NormalPageLayout>
