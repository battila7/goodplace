---
import Assets from '../../util/assets'

interface Feature {
    title: string
    description: string
    icon: string
    iconSvg?: any
}

interface Props {
    features: Feature[]
}

const { features } = Astro.props

for (const feature of features) {
    feature.iconSvg = await Assets.getSvg(feature.icon, {
        addClasses: 'size-10 shrink-0',
        strokeWidth: 1,
    })
}
---

<section class="w-full py-5 bg-gray-50">
    <div class="px-5 md:px-0 md:w-2/3 mx-auto flex flex-col gap-y-2 md:flex-row md:gap-x-2 md:justify-evenly">
        {features.map(feature => (
            <div class="bg-white border border-gray-200 shadow-sm rounded-lg">
                <div class="p-4 h-full w-full flex flex-row gap-x-5 items-center">
                    <div set:html={feature.iconSvg} class="text-green-700">
                    </div>
                    <div class="flex flex-col gap-y-2">
                        <div class="text-lg md:text-md text-gray-800">
                            {feature.title}
                        </div>
                        <div class="hidden text-lg md:block md:text-sm text-gray-800">
                            {feature.description}
                        </div>
                    </div>
                    
                </div>
            </div>
        ))}    
    </div>
</section>
