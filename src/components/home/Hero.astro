---
interface Props {
    title: string
    subtitle: string
}

const { title, subtitle } = Astro.props
---
<section class="w-full bg-blend-multiply bg-gray-300 bg-[url('/apartman/gpa-main.webp')] bg-cover">
    <div class="pl-5 lg:pl-[15rem] pt-15 sm:pt-0 flex flex-col gap-y-3 justify-center min-h-[calc(80vh)] sm:min-h-[calc(80vh)]">
        <h1 class="playfair-display font-bold text-3xl md:text-5xl text-white drop-shadow-md">{title}</h1>
        <p class="w-3/4 md:w-1/3 text-white">
            {subtitle}
        </p>
        <div class="mt-5 flex flex-col sm:flex-row gap-y-2 gap-x-2">
            <div>
                <a href="#services" class="py-2 px-3 text-md font-semibold shadow-sm inline-flex items-center gap-x-2 rounded-lg border border-transparent bg-green-700 text-white font-semibold hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:ring-2 focus:ring-blue-500">
                    További részletek
                </a>
            </div>
            <div>
                <a href="/book-your-stay" class="py-2 px-3 text-md font-semibold shadow-sm inline-flex items-center gap-x-2 rounded-lg border border-transparent bg-green-600 text-white font-semibold hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Foglalj most és élvezd a kényelmet!
                </a>
            </div>
        </div>
    </div>
</section>
