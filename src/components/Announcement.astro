---
import { enabled, text, link } from '../content/general/announcement.json'
---
{enabled && <div class="{!enabled} bg-gradient-to-r from-green-700 to-green-700">
    <div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto">
        <div class="py-1 flex justify-between items-center gap-1.5">
            <p class="me-2 inline-block text-xs sm:text-sm text-white">
                {text}
            </p>
            <div
                class="flex justify-center md:justify-start items-center gap-x-2.5"
            >
                <!-- <div class="inline-block h-3 border-e border-white/50"></div> -->
                <a
                    class="py-1.5 px-2.5 inline-flex justify-center items-center gap-x-1 rounded-md bg-white/10 text-xs font-semibold text-white hover:bg-white/20 focus:outline-none focus:bg-white/20"
                    href={link}
                >
                    Megtekint√©s
                    <svg
                        class="shrink-0 size-3.5"
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="m9 18 6-6-6-6"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>}
