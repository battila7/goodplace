---
import { Picture } from "astro:assets";

const {
    title,
    image,
    link
} = Astro.props;
---
<div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    <div>
        <div class="sticky top-[90px] md:pb-20">
            <h2 class="text-2xl">
                {title}
            </h2>
            <div class="pt-2 pb-4">
                <slot />
            </div>
            <div>
                <a target="_blank" href={link} class="py-2 px-3 shadow-sm inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-green-600 text-white font-semibold hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Tov√°bbiak
                </a>
            </div>
        </div>
    </div>
    <div class="w-full">
        <Picture
            src={image}
            formats={["webp", "avif", "jpeg"]}
            alt={title}
            class="h-auto max-w-full rounded-lg transition-transform duration-300 transform group-hover:scale-125"
        />
    </div>
</div>
